<html>
  <head>
    <meta charset="utf-8">
    <title>TypePhil</title>
      <!-- jquery -->
      <script src="public/js/jquery.js"></script>

      <!-- Fonts -->
      <link rel="stylesheet" href="public/stylesheet/Raleway.css" >

      <!-- Stylesheets -->
      <link rel="stylesheet" href="public/fonts/FontAwesome/css/font-awesome.min.css">

      <!-- Latest compiled and minified CSS -->
      <link rel="stylesheet" href="public/stylesheet/bootstrap.min.css">

      <!-- Latest compiled and minified JavaScript -->
      <script src="public/js/bootstrap.min.js"></script>

      <link rel="stylesheet" href="public/stylesheet/base.css">
      <link rel="stylesheet" href="public/stylesheet/style.css">

      <!-- Routes -->
      <script src="routes.js"></script>
      <script>
        // localStorage.clear();
        // console.log(localStorage);
      </script>
  </head>
  <body>
    <div class = "main-container">
      <div class = "maintext">
        <div id = "title">TypePhil.<span class="blinking-cursor">|</span></div>
        <form id="login">
          <input autofocus class = "personalData" placeholder="Username" type="text" name="username">
          <input class = "personalData" placeholder="Password" type="password" name="password">
          <button class = "btn btn-warning" onclick="route_login()"><span class="fa fa-sign-in"></span> <span class = "desc">Login</span></button>
        </form>
        <div>
          <span class="app-option">Need an account? 
            <button class = "btn btn-warning" onclick="go_to_signup()"><span class="fa fa-refresh"></span> <span class = "desc">Sign Up</span>
            </button>
          </span>
          <span class="app-option">Forgot your password? 
            <button class = "btn btn-danger" onclick="route_password_recovery()"><span class="fa fa-lock"></span> <span class = "desc" style="margin-left:2px">Recover Password</span>
            </button>
          </span>
        </div>
      </div>
    </div>
  </body>
</html>